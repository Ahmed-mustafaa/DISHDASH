<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/dishdash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dishdash"
        android:supportsRtl="true"
        android:theme="@style/Theme.DISHDASH"
        tools:targetApi="31">
        <receiver android:name="com.example.dishdash.NetworkCall.NetworkListener"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".view.SearchAvtivity.SearchActivity"
            android:exported="false" /><activity
            android:name=".view.Favorites.FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".view.CreatePlanActivity"
            android:exported="false" />
        <activity
            android:name=".view.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.MealDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.DashBoardActivity"
            android:exported="false" />
        <activity
            android:name=".view.SignUP.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>