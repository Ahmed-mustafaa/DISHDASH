<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoryActivity">

    <activity
        android:id="@+id/categoryActivity"
        android:name="com.example.dishdash.view.CategoryActivity"
        android:label="CategoryActivity"
        tools:layout="@layout/category_country_meals_layout" />
    <action
        android:id="@+id/action_categoryActivity_to_mealDetailsFragment"
        app:destination="@id/mealDetailsFragment">

        <argument
        android:name="mealName"
        app:argType="string" />
    <argument
        android:name="mealImage"
        app:argType="string" />
    <argument
        android:name="mealId"
        app:argType="integer" />
    </action>
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.dishdash.mealDetailsFragment"
        android:label="fragment_meal_details"
        tools:layout="@layout/fragment_meal_details" >
        <argument
            android:name="mealId"
            app:argType="integer" />
    </fragment>
</navigation>